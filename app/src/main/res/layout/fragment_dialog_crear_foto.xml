<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/primary"
            android:padding="16dp"
            android:id="@+id/banner">

            <TextView
                android:id="@+id/tv_texto_nueva_lista"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:text="Agregar Nueva foto"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <ImageView
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_image"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_below="@+id/tv_texto_nueva_lista"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <AutoCompleteTextView
            android:id="@+id/ed_nombre_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite Nombre de la foto"
            android:maxLines="1"
            />

    </android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <AutoCompleteTextView
            android:id="@+id/ed_descripcion_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite Descricpion de la foto"
            android:maxLines="1"
            />

    </android.support.design.widget.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <Button
            android:background="@color/accent"
            android:id="@+id/btn_guardar_foto"
            android:textColor="@android:color/white"
            android:text="@string/aceptar"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:background="@color/accent"
            android:id="@+id/btn_cancelar_foto"
            android:text="@string/cancelar"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>